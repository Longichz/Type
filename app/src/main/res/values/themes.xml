<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Type" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:ambientShadowAlpha">0.06</item>
        <item name="android:spotShadowAlpha">0.10</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/grey_700</item>
    </style>
    <style name="textSecondary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/grey_500</item>
    </style>
    <style name="top_indicator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/top_indicator</item>
    </style>
    <style name="item" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/item_day</item>
    </style>
    <style name="item_2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/item_2_day</item>
    </style>
    <style name="item_3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/item_3_day</item>
    </style>
    <style name="tint" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="tint">@color/grey_700</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/splash_day</item>
    </style>
    <style name="background" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/background_day</item>
    </style>
    <style name="bottom_menu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>
    <style name="settings_item" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/item_settings_day</item>
    </style>
    <style name="settings_item_start" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/item_settings_start_day</item>
    </style>
    <style name="settings_item_end" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/item_settings_end_day</item>
    </style>

    <style name="settings_item_both" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/item_settings_both_day</item>
    </style>

    <style name="item_avatar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/item_avatar_day</item>
    </style>

    <style name="settings_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_settings</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="settings_button_start" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_settings_start</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="settings_button_end" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_settings_end</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="button_borderless" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_borderless</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">15dp</item>
    </style>

</resources>