<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.settings.DesignFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">


            <!--Тема -->
            <!--Тема -->
            <!--Тема -->
            <TextView
                android:id="@+id/tvSettingsDesignThemeHeader"
                style="@style/textSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/fira_sans"
                android:text="@string/design_theme_header"
                android:textSize="15sp" />



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    style="@style/settings_item_both"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/tvSettingsDesignThemeSystemHeader"
                        style="@style/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_medium"
                        android:text="@string/design_theme_system"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/system_theme"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="@color/grey_01" />

                    <LinearLayout
                        tools:visibility="visible"
                        android:visibility="invisible"
                        android:id="@+id/llSettingsDesignThemeSystemIndicator"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/item_settings_both_selected"
                        android:orientation="horizontal" />

                    <Button

                        android:id="@+id/btSettingsDesignThemeSystem"
                        style="@style/button_borderless"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/item_settings_theme_night"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/tvSettingsDesignThemeNightHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_medium"
                        android:text="@string/design_theme_night"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/night_theme"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="@color/grey_01" />

                    <LinearLayout
                        android:visibility="invisible"
                        android:id="@+id/llSettingsDesignThemeNightIndicator"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/item_settings_both_selected"
                        android:orientation="horizontal" />

                    <Button
                        android:id="@+id/btSettingsDesignThemeNight"
                        style="@style/button_borderless"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:background="@drawable/item_settings_theme_day"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/tvSettingsDesignThemeDayHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fira_sans_medium"
                        android:text="@string/design_theme_day"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textColor="@color/grey_700"
                        android:layout_marginTop="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/day_theme"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:tint="@color/grey_01" />

                    <LinearLayout
                        android:visibility="invisible"
                        android:id="@+id/llSettingsDesignThemeDayIndicator"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/item_settings_both_selected"
                        android:orientation="horizontal" />

                    <Button
                        android:id="@+id/btSettingsDesignThemeDay"
                        style="@style/button_borderless"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <!--Оптимизация -->
            <!--Оптимизация -->
            <!--Оптимизация -->
            <TextView
                android:id="@+id/tvSettingsDesignBlurHeader"
                style="@style/textSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/fira_sans"
                android:text="@string/design_optimization_header"
                android:textSize="15sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/settings_item_both"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/ivSettingsDesignOptimizationBlurIndicator"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_round_apply_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/type1"/>

                <Button
                    android:id="@+id/btSettingsDesignOptimizationBlur"
                    style="@style/button_borderless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:fontFamily="@font/fira_sans"
                    android:text="@string/design_optimization_blur"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TextSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>